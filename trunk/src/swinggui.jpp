					break;
				case KeyEvent.VK_EQUALS:
					cpu.releaseButton(BUTTON_START);
					break;
				case KeyEvent.VK_RIGHT:
					cpu.releaseButton(BUTTON_RIGHT);
					break;
				case KeyEvent.VK_LEFT:
					cpu.releaseButton(BUTTON_LEFT);
					break;
				case KeyEvent.VK_UP:
					cpu.releaseButton(BUTTON_UP);
					break;
				case KeyEvent.VK_DOWN:
					cpu.releaseButton(BUTTON_DOWN);
					break;
				default:
					//System.out.println("keyPressed");
					break;
			}
		}
